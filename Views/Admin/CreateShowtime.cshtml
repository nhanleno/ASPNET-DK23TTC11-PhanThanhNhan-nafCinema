@model nafCine.Models.Showtime

@{
    ViewData["Title"] = "Thêm Suất Chiếu Mới";
    var movies = ViewBag.Movies as SelectList;
    var screens = ViewBag.Screens as SelectList;
}

<h2>Thêm Suất Chiếu Mới</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="CreateShowtime" method="post">
    <div class="form-group">
        <label for="MovieId">Phim</label>
        <select asp-for="MovieId" class="form-control" asp-items="movies"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ScreenId">Phòng Chiếu</label>
        <select asp-for="ScreenId" class="form-control" asp-items="screens"></select>
        <span asp-validation-for="ScreenId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local"
               value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local"
               value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm Suất Chiếu" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}