@model nafCine.Models.TicketPrice

@{
    ViewData["Title"] = "Thêm Giá Vé Mới";
    var screens = ViewBag.Screens as SelectList;
    var showtimes = ViewBag.Showtimes as SelectList;
}

<h2>Thêm Giá Vé Mới</h2>

<form asp-action="CreateTicketPrice" method="post">
    <div class="form-group">
        <label for="ScreenId">Phòng Chiếu</label>
        <select asp-for="ScreenId" class="form-control" asp-items="screens"></select>
    </div>
    <div class="form-group">
        <label for="ShowtimeId">Suất Chiếu</label>
        <select asp-for="ShowtimeId" class="form-control" asp-items="showtimes"></select>
    </div>
    <div class="form-group">
        <label asp-for="TicketType" class="control-label"></label>
        <input asp-for="TicketType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm Giá Vé" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}